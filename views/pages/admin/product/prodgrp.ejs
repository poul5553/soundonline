<% include ../../../partials/header %>

<div id="listpgrp" class="menu-modal modal-content">

  

<div class="form-group">
<button type="button" id="formclose" class="btn btn-success">Luk</button>
</div>

</div>
<script>
    const url = "/api/productgroup/";

    fetch(url)
        .then(data => {
            return data.json();
        })
        .then(data => {

            let html = `<table class="table">
                <thead> 
                <tr> 
                <th width="25%">Tilknyt en eller flere produktgrupper</th> 
              
                <thead> `;

            for (var item of data) {


                html += `<tr> 
                    <td> 
                    <input type="checkbox" name="productgroup" value="${item.id}"> ${item.title}</br>
                    </td>
                   
                    
                    </tr>`;
            }
            html += '</table>';
            document.getElementById('listpgrp').innerHTML = html;
        });

    let btn = document.createElement('a');
    btn.setAttribute('class', 'btn btn-default');
    btn.setAttribute('href', '/admin/productgroup/create');
    btn.innerHTML = 'Opret ny';
    document.getElementById('buttonpanel').appendChild(btn);
</script>

